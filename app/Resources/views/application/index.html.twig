{% extends 'base.html.twig' %}

{% block body %}
    <h1>Applications list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Licensetype</th>
                <th>Developer</th>
                <th>Webpage</th>
                <th>Description</th>
                <th>Adddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td><a href="{{ path('application_show', { 'id': application.id }) }}">{{ application.id }}</a></td>
                <td>{{ application.name }}</td>
                <td>{{ application.type }}</td>
                <td>{{ application.licenseType }}</td>
                <td>{{ application.developer }}</td>
                <td>{{ application.webpage }}</td>
                <td>{{ application.description }}</td>
                <td>{% if application.addDate %}{{ application.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('application_show', { 'id': application.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('application_edit', { 'id': application.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('application_new') }}">Create a new application</a>
        </li>
    </ul>
{% endblock %}

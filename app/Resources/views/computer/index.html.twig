{% extends 'base.html.twig' %}

{% block title %} Komputery {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('computer_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista komputerów</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('computer_new', {'type': 'desktop'}) }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj desktopa</span>
            </a>
            <a href="{{ path('computer_new', {'type': 'laptop'}) }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj laptopa</span>
            </a>
            {% endif %}
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}


{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-desktop"></i></div>
                                <h5>Lista komputerów</h5>
                            </header>
                            <div id="collapse4" class="body">
                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nazwa</th>
                                        <th>Model</th>
                                        <th>Typ</th>
                                        <th>Producent</th>
                                        <th>Procesor</th>
                                        <th>RAM</th>
                                        <th>Użytkownicy</th>
                                        <th>Dział</th>
                                        <th>Adres IP</th>
                                        <th>Zdjęcie</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for computer in computers %}
                                        <tr onclick='location.href = "{{ path('computer_show', { 'id': computer.id, 'type': computer.formFactor }) }}"'>
                                            <td>{{ computer.name }}</td>
                                            <td>{{ computer.model }}</td>
                                            <td>{{ computer.formFactor }}</td>
                                            <td>{{ computer.brand }}</td>
                                            <td>
                                                {% if computer.cpu is not null %}
                                                    {{ computer.cpu.name }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if computer.ramslots is empty %}
                                                    Brak
                                                {% else %}
                                                    {% set sum = 0 %}
                                                    {% for ramslot in computer.ramslots %}
                                                        {% set sum = sum + ramslot.ram.capacity %}
                                                    {% endfor %}
                                                    {{ sum }} GB
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% for user in computer.users %}
                                                    {{ user.name }} {{ user.usersurname }}<br>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                {% for user in computer.users %}
                                                    {{ user.departament.name }}<br>
                                                {% endfor %}
                                            </td>

                                            <td>
                                                {% for nic in computer.networkInterfaceCards %}
                                                    {{ nic.ipv4 }}<br>
                                                {% else %}
                                                    Nie ma stałego adresu IP
                                                {% endfor %}
                                            </td>

                                            <td>
                                                {% if computer.pictures is empty %}
                                                    {% set picture = "default.png" %}
                                                    <a href="{{ asset('pictures/' ~ picture) }}">
                                                        <img src="{{ asset('pictures/' ~ picture) }}" alt="Desktop"
                                                             height="40" width="40">
                                                    </a>
                                                {% else %}
                                                    {%  set thumb40 = computer.pictures|first.file|replace({'.': "thumb40."}) %}
                                                    <a href="{{ asset('pictures/' ~ computer.pictures|first.file) }}">
                                                        <img src="{{ asset('pictures/thumb40/' ~ thumb40) }}"
                                                             alt="Desktop"
                                                             height="40" width="40">
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
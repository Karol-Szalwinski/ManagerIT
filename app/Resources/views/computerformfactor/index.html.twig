{% extends 'base.html.twig' %}

{% block title %} Obudowy komputerowe {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('computerformfactor_index') }}"
               class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista Obudów</span>
            </a>
            <a href="{{ path('computerformfactor_new') }}"
               class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-desktop"></i></div>
                                <h5>Lista obudów</h5>
                            </header>
                            <div id="collapse4" class="body">
                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nazwa</th>
                                        <th>Model</th>
                                        <th>Seria</th>
                                        <th>Producent</th>
                                        <th>Dedykowana dla modelu</th>
                                    </thead>
                                    <tbody>
                                    {% for computerFormFactor in computerFormFactors %}
                                        <tr onclick='location.href = "{{ path('computerformfactor_show', { 'id': computerFormFactor.id }) }}"'>
                                            <td>{{ computerFormFactor.name }}</td>
                                            <td>{{ computerFormFactor.model }}</td>
                                            <td>{{ computerFormFactor.seria }}</td>
                                            <td>{{ computerFormFactor.brand }}</td>
                                            <td>
                                                {% if computerFormFactor.dedicatedForModel > 0 %}
                                                    Tak
                                                {% else %}
                                                    Uniwersalna
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}





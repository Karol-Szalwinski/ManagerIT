{% extends 'base.html.twig' %}

{% block title %} Działy firmy {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('departament_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista działów</span>
            </a>
            <a href="{{ path('departament_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-building"></i></div>
                                <h5>Lista działów</h5>

                            </header>

                            <div id="collapse4" class="body">

                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nazwa działu</th>
                                        <th>Ilość pracowników</th>
                                        <th>Ilość komputerów</th>
                                        <th>Ilość tabletów</th>
                                        <th>Ilość telefonów</th>
                                        <th>Ilość drukarek</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for departament in departaments %}
                                        <tr onclick='location.href = "{{ path('departament_show', { 'id': departament.id }) }}"'>
                                            <td>{{ departament.name }}</td>
                                            <td>{{ departament.employees |length }}</td>
                                            <td>
                                                {% set computersCounter = 0 %}
                                                {% set tabletsCounter = 0 %}
                                                {% set phonesCounter = 0 %}
                                                {% set printersCounter = 0 %}
                                                {% for employee in departament.employees %}
                                                    {% set computersCounter = computersCounter + employee.computers|length %}
                                                    {% set tabletsCounter = tabletsCounter + employee.tablets|length %}
                                                    {% set phonesCounter = phonesCounter + employee.phones|length %}
                                                    {% set printersCounter = printersCounter + employee.printers|length %}
                                                {% endfor %}
                                                {{ computersCounter }}
                                            </td>
                                            <td>{{ tabletsCounter }} </td>
                                            <td>{{ phonesCounter }}</td>
                                            <td>{{ printersCounter }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}




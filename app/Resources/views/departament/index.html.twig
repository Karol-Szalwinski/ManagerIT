{% extends 'base.html.twig' %}

{% block title %} Działy firmy {% endblock %}

{% block content %}
    <i class="fa fa-building"></i>&nbsp;
    Lista działów
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-building"></i></div>
                                <h5>Lista działów</h5>
                                <div class="btn-group">
                                    <a href="{{ path('departament_new') }}" class="btn btn-primary btn-line btn-rect">Dodaj</a>
                                    <a href="#" class="btn btn-warning btn-line btn-rect">Modyfikuj</a>
                                    <a href="#" class="btn btn-danger btn-line btn-rect">Usuń</a>
                                </div>
                            </header>

                            <div id="collapse4" class="body">

                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nazwa działu</th>
                                            <th>Ilość pracowników</th>
                                            <th>Ilość komputerów</th>
                                            <th>Ilość laptopów</th>
                                            <th>Ilosć licencji</th>  
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for departament in departaments %}
                                            <tr onclick='location.href="{{ path('departament_show', { 'id': departament.id }) }}"'>
                                                <td><a href="{{ path('user_show', { 'id': departament.id }) }}">{{ departament.id }}</a></td>
                                                <td>{{ departament.name }}</td>
                                                <td>10</td>
                                                <td>10</td>
                                                <td>3</td>
                                                <td>23</td>
                                                <td><a href="{{ path('departament_edit', { 'id': departament.id }) }}">edit</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}




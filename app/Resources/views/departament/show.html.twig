{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departament</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departament.id }}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{% if departament.addDate %}{{ departament.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('departament_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('departament_edit', { 'id': departament.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

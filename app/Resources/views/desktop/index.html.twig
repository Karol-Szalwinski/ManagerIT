{% extends 'base.html.twig' %}

{% block title %} Desktopy {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('desktop_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista desktopów</span>
            </a>
            <a href="{{ path('desktop_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}


{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-desktop"></i></div>
                                <h5>Lista komputerów</h5>
                                <div class="btn-group">
                                    <a href="{{ path('desktop_new') }}" class="btn btn-primary btn-line btn-rect">Dodaj</a>
                                    <a href="#" class="btn btn-warning btn-line btn-rect">Modyfikuj</a>
                                    <a href="#" class="btn btn-danger btn-line btn-rect">Usuń</a>
                                </div>
                            </header>


                            <div id="collapse4" class="body">


                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nazwa</th>
                                            <th>Model</th>
                                            <th>Typ</th>
                                            <th>Producent</th>
                                            <th>Procesor</th>
                                            <th>RAM</th>
                                            <th>System</th>
                                            <th>Adres IP </th>
                                            <th>MAC adres</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for desktop in desktops %}
                                            <tr onclick='location.href = "{{ path('desktop_show', { 'id': desktop.id }) }}"'>
                                                <td>{{ desktop.name }}</td>
                                                <td>{{ desktop.model }}</td>
                                                <td>{{ desktop.type }}</td>
                                                <td>{{ desktop.manufacturer }}</td>
                                                <td>{{ desktop.cpu }}</td>
                                                <td>{{ desktop.ram }}</td>
                                                <td>{{ desktop.os }}</td>
                                                <td>{{ desktop.ipAddress }}</td>
                                                <td>{{ desktop.macAddress }}</td>
                                                <td><a href="{{ path('desktop_show', { 'id': desktop.id }) }}">{{ desktop.id }}</a></td>
                                                <td><a href="{{ path('desktop_edit', { 'id': desktop.id }) }}">edit</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
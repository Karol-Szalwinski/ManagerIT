{% extends 'base.html.twig' %}

{% block title %} Desktopy {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('desktop_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista desktopów</span>
            </a>
            <a href="{{ path('desktop_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}


{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-desktop"></i></div>
                                <h5>Lista komputerów</h5>
                            </header>
                            <div id="collapse4" class="body">
                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nazwa</th>
                                        <th>Model</th>
                                        <th>Typ</th>
                                        <th>Producent</th>
                                        <th>Procesor</th>
                                        <th>RAM</th>
                                        <th>System</th>
                                        <th>Użytkownicy</th>
                                        <th>Licencje</th>
                                        <th>Dział</th>
                                        <th>Adres IP</th>
                                        <th>MAC adres</th>
                                        <th>Zdjęcie</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for desktop in desktops %}
                                        <tr onclick='location.href = "{{ path('desktop_show', { 'id': desktop.id }) }}"'>
                                            <td>{{ desktop.name }}</td>
                                            <td>{{ desktop.model }}</td>
                                            <td>{{ desktop.type }}</td>
                                            <td>{{ desktop.manufacturer }}</td>
                                            <td>
                                                {% if desktop.cpu is not null %}
                                                    {{ desktop.cpu.name }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if desktop.rams is empty %}
                                                    Brak
                                                {% else %}
                                                    {% set sum = 0 %}
                                                    {% for ram in desktop.rams %}
                                                        {% set sum = sum + ram.capacity %}
                                                    {% endfor %}
                                                    {{ sum }} GB
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if desktop.os is not null %}
                                                    {{ desktop.os.name }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% for employee in desktop.employees %}
                                                    {{ employee.name }} {{ employee.surname }}<br>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                {% for license in desktop.licenses %}
                                                    {{ license.name }}<br>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                {% for employee in desktop.employees %}
                                                    {{ employee.departament.name }}<br>
                                                {% endfor %}
                                            </td>
                                            <td>{{ desktop.ipAddress }}</td>
                                            <td>{{ desktop.macAddress }}</td>
                                            <td>
                                                {% if desktop.picture is not null %}
                                                    {% set picture = desktop.picture %}
                                                {% else %}
                                                    {% set picture = "default.png" %}
                                                {% endif %}
                                                <a href="{{ asset('pictures/' ~ picture) }}">
                                                    <img src="{{ asset('pictures/' ~ picture) }}" alt="Desktop"
                                                         height="40" width="40">
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
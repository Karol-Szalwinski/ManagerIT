{% extends 'base.html.twig' %}

{% block title %} Dodaj komputer{% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('computer_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Lista desktopów</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}
    <!-- /#left -->
    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!-- /.row -->
                <div class="row">
                    <!----------------------------------------------------->
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <div class="box dark">
                            <header>
                                <div class="icons"><i class="fa fa-edit"></i></div>
                                <h5>Dodaj nowy komputer typu desktop</h5>
                                <!-- .toolbar -->
                                <div class="toolbar">
                                    <nav style="padding: 8px;">
                                        <a href="javascript:;" class="btn btn-default btn-xs collapse-box">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-default btn-xs full-box">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-danger btn-xs close-box">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </nav>
                                </div>            <!-- /.toolbar -->
                            </header>
                            <div id="div-1" class="body">

                                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

                                <div class="form-group">
                                    {{ form_label(form.name, 'Nazwa komputera', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź nazwę'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.model, 'Model', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.model, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź model'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.series, 'Nr seryjny', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.series, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź serię'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.brand, 'Producent', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.brand, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź producenta'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.caseType, 'Rodzaj obudowy', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.caseType, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź typ obudowy'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.os, 'System operacyjny', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.os, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź zainstalowany system'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.location, 'Lokalizacja', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.location, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź lokalizację'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.warrantyEndDate, 'Data wygaśnięcia gwarancji', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}

                                    <div class="col-lg-3">
                                        {{ form_widget(form.warrantyEndDate, { 'attr': {'class': 'form-control js-datepicker'} }) }}
                                    </div>
                                </div>


                                <div class="form-group">
                                    {{ form_label(form.status, 'Status', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.status, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.description, 'Uwagi', { 'label_attr': {'class': 'control-label col-lg-5'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.description, { 'attr': {'class': 'form-control autosize'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-5 col-sm-3 control-label required">Posiada ochronę ups</label>
                                    <span class=" control-label col-lg-1">&nbsp</span>
                                        {{ form_widget(form.upsProtected, { 'attr': {'class': '',
                                            'data-toggle': 'toggle',
                                            'data-size': 'medium',
                                            'data-on':'Tak',
                                            'data-off':'Nie',
                                            'data-onstyle': 'success',
                                            'data-offstyle': 'danger',
                                        } }) }}

                                </div>

                                <div class="form-group">
                                    <div class="col-lg-4"></div>
                                    <div class="col-lg-6">
                                        <input type="submit" value="Dodaj nowy komputer"
                                               class="btn btn-primary btn-grad control-label" formnovalidate/>
                                    </div>
                                </div>
                            </div>
                            <br>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>


                <!----------------------------------------------------->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.inner -->
    </div>
    <!-- /.outer -->
    </div>
    <!-- /#content -->

{% endblock %}
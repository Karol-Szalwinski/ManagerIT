{% extends 'base.html.twig' %}

{% block title %} Zdjęcia desktopa {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('desktop_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-fast-backward"></i>
                <span class="link-title">Lista desktopów</span>
            </a>
            <a href="{{ path('desktop_show', { 'id': desktop.id }) }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Pokaż destkop</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}
    <!-- /#left -->
    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!-- .col-lg-6 -->
                <div class="col-lg-6">
                    <div class="box">
                        <header>
                            <div class="icons"><i class="fa fa-photo"></i></div>
                            <h5>Zdjęcia</h5>

                            <div class="toolbar">
                                <div class="btn-group">
                                    <a href="#condensedTable1" data-toggle="collapse"
                                       class="btn btn-default btn-sm minimize-box">
                                        <i class="fa fa-angle-up"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                </div>
                            </div>
                        </header>
                        <div id="condensedTable1" class="body collapse in">
                            <table class="table table-condensed responsive-table">

                                <tbody>
                                <tr>
                                    <td>
                                        {% if desktop.picture is not null %}
                                            {% set picture = desktop.picture.filename %}
                                        {% else %}
                                            {% set picture = "default.png" %}
                                        {% endif %}

                                        <a href="{{ asset('pictures/' ~ picture) }}">
                                            <img src="{{ asset('pictures/' ~ picture) }}" alt="Desktop" height="200"
                                                 width="200">
                                        </a>
                                    </td>
                                    Kliknij aby powiększyć
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-6 -->

                <!-- /.row -->
                <div class="row">

                    <!----------------------------------------------------->

                    <div class="col-lg-8">
                        <div class="box dark">
                            <header>
                                <div class="icons"><i class="fa fa-edit"></i></div>
                                <h5>Dodaj zdjęcie</h5>
                                <!-- .toolbar -->
                                <div class="toolbar">
                                    <nav style="padding: 8px;">
                                        <a href="javascript:;" class="btn btn-default btn-xs collapse-box">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-default btn-xs full-box">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-danger btn-xs close-box">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </nav>
                                </div>            <!-- /.toolbar -->
                            </header>
                            <div id="div-1" class="body">
                                {{ form_start(picture_form, { 'attr': {'class': 'form-horizontal'} }) }}
                                <div class="form-group">
                                    {{ form_row(picture_form.picture) }}
                                </div>

                                <input type="submit" value="Ustaw jako zdjęcie poglądowe"
                                       class="btn btn-primary btn-grad control-label"/>
                                <br>
                                {{ form_end(picture_form) }}

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->

{% endblock %}

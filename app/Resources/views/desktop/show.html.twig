{% extends 'base.html.twig' %}

{% block body %}
    <h1>Desktop</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ desktop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ desktop.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ desktop.model }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ desktop.type }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ desktop.manufacturer }}</td>
            </tr>
            <tr>
                <th>Cpu</th>
                <td>{{ desktop.cpu }}</td>
            </tr>
            <tr>
                <th>Ram</th>
                <td>{{ desktop.ram }}</td>
            </tr>
            <tr>
                <th>Hdd</th>
                <td>{{ desktop.hdd }}</td>
            </tr>
            <tr>
                <th>Ssd</th>
                <td>{{ desktop.ssd }}</td>
            </tr>
            <tr>
                <th>Drive</th>
                <td>{{ desktop.drive }}</td>
            </tr>
            <tr>
                <th>Powersupply</th>
                <td>{{ desktop.powerSupply }}</td>
            </tr>
            <tr>
                <th>Casetype</th>
                <td>{{ desktop.caseType }}</td>
            </tr>
            <tr>
                <th>Os</th>
                <td>{{ desktop.os }}</td>
            </tr>
            <tr>
                <th>Ipaddress</th>
                <td>{{ desktop.ipAddress }}</td>
            </tr>
            <tr>
                <th>Macaddress</th>
                <td>{{ desktop.macAddress }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ desktop.picture }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ desktop.price }}</td>
            </tr>
            <tr>
                <th>Purchasedate</th>
                <td>{% if desktop.purchaseDate %}{{ desktop.purchaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{% if desktop.addDate %}{{ desktop.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('desktop_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('desktop_edit', { 'id': desktop.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %} Procesory Desktopowe {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('desktopcpu_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista procesorów</span>
            </a>
            <a href="{{ path('desktopcpu_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}


{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-desktop"></i></div>
                                <h5>Lista komputerów</h5>
                            </header>
                            <div id="collapse4" class="body">
                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nazwa</th>
                                        <th>Producent</th>
                                        <th>Taktowanie Bazowe</th>
                                        <th>Taktowanie Maksymalne</th>
                                        <th>Rdzeni</th>
                                        <th>Wątków</th>
                                        <th>Cashe</th>
                                        <th>TDP</th>
                                        <th>Zintegrowana grafika</th>
                                        <th>Litografia</th>
                                        <th>Data wdrożenia</th>
                                        <th>Gniazdo</th>
                                        <th>Generacja</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for desktopCPU in desktopCPUs %}
                                        <tr onclick='location.href = "{{ path('desktopcpu_show', { 'id': desktopCPU.id }) }}"'>
                                            <td>{{ desktopCPU.id }}</td>
                                            <td>{{ desktopCPU.name }}</td>
                                            <td>{{ desktopCPU.manufacturer }}</td>
                                            <td>{{ desktopCPU.baseFrequency }} GHz</td>
                                            <td>{{ desktopCPU.maxTurboFrequency }} GHz</td>
                                            <td>{{ desktopCPU.numberOfCores }}</td>
                                            <td>{{ desktopCPU.numberOfThreads }}</td>
                                            <td>{{ desktopCPU.casheMB }} MB</td>
                                            <td>{{ desktopCPU.tDP }} W</td>
                                            <td>{{ desktopCPU.gPU }}</td>
                                            <td>{{ desktopCPU.lithographyNM }}</td>
                                            <td>{% if desktopCPU.launchDate %}{{ desktopCPU.launchDate|date('Y-m') }}{% endif %}</td>
                                            <td>{{ desktopCPU.sockets }}</td>
                                            <td>{{ desktopCPU.generation }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}



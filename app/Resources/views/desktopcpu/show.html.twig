{% extends 'base.html.twig' %}

{% block title %} Procesor Desktopowy {% endblock %}


{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('desktopcpu_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Lista procesorów</span>
            </a>
            <a href="{{ path('desktopcpu_edit', { 'id': desktopCPU.id }) }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-wrench"></i>
                <span class="link-title">Edytuj</span>
            </a>
            <div style="display: inline-block;">
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-metis-5 btn-grad btn-rect btn-lg inline"><i class="fa fa-trash"></i> Usuń</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}


{% block body %}
    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!-- /.row -->

                <div class="row">

                    <!-- .col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-list"></i></div>
                                <h5>Dane podstawowe</h5>

                                <div class="toolbar">
                                    <div class="btn-group">
                                        <a href="#condensedTable1" data-toggle="collapse" class="btn btn-default btn-sm minimize-box">
                                            <i class="fa fa-angle-up"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </header>
                            <div id="condensedTable1" class="body collapse in">
                                <table class="table table-condensed responsive-table">

                                    <tbody>
                                        <tr>                                                    
                                            <td>Nazwa</td>
                                            <td>{{ desktopCPU.name }}</td>
                                        </tr>
                                        <tr>
                                            <td>Producent</td>
                                            <td>{{ desktopCPU.manufacturer  }}</td>
                                        </tr>
                                        <tr>
                                            <td>Litografia</td>
                                            <td>{{ desktopCPU.lithographyNM }} Nm</td>
                                        </tr>
                                        <tr>
                                            <td>Generacja</td>
                                            <td>{{ desktopCPU.generation }}</td>
                                        </tr>
                                        <tr>
                                            <td>Podstawka</td>
                                            <td>{{ desktopCPU.sockets }}</td>
                                        </tr>
                                        <tr>
                                            <td>Data wdrożenia</td>
                                            <td>{% if desktopCPU.launchDate %}{{ desktopCPU.launchDate|date('Y-m') }}{% endif %}</td>
                                        </tr>
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 -->

                    <!-- .col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-list"></i></div>
                                <h5>Wydajność</h5>

                                <div class="toolbar">
                                    <div class="btn-group">
                                        <a href="#condensedTable2" data-toggle="collapse" class="btn btn-default btn-sm minimize-box">
                                            <i class="fa fa-angle-up"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </header>
                            <div id="condensedTable2" class="body collapse in">
                                <table class="table table-condensed responsive-table">

                                    <tbody>
                                        <tr>
                                            <td>Bazowe taktowanie</td>
                                            <td>{{ desktopCPU.baseFrequency }} GHz</td>
                                        </tr>
                                        <tr>
                                            <td>Taktowanie turbo</td>
                                            <td>{{ desktopCPU.maxTurboFrequency }} GHz</td>
                                        </tr>
                                        <tr>
                                            <td>Liczba rdzeni</td>
                                            <td>{{ desktopCPU.numberOfCores }}</td>
                                        </tr>
                                        <tr>
                                            <td>Liczba wątków</td>
                                            <td>{{ desktopCPU.numberOfThreads }}</td>
                                        </tr>
                                        <tr>
                                            <td>Cache</td>
                                            <td>{{ desktopCPU.casheMB }} MB</td>
                                        </tr>
                                        <tr>
                                            <td>Tdp</td>
                                            <td>{{ desktopCPU.tDP }} W</td>
                                        </tr>
                                        <tr>
                                            <td>Gpu</td>
                                            <td>{{ desktopCPU.gPU }}</td>
                                        </tr>
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 -->

                </div>
                <!-- /.row -->
            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->

{% endblock %}


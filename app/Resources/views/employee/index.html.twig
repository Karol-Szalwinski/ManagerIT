{% extends 'base.html.twig' %}

{% block title %} Pracownicy {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('employee_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista pracowników</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('employee_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
            {% endif %}
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-id-card"></i></div>
                                <h5>Lista pracowników</h5>
                            </header>

                            <div id="collapse4" class="body">

                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Imię</th>
                                        <th>Nazwisko</th>
                                        <th>Stanowisko</th>
                                        <th>Telefon</th>
                                        <th>Email</th>
                                        <th>Sprzęt</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for employee in employees %}
                                        <tr onclick='location.href="{{ path('employee_show', { 'id': employee.id }) }}"'>
                                            <td>{{ employee.name }}</td>
                                            <td>{{ employee.surname }}</td>
                                            <td>{{ employee.job }}</td>
                                            <td>{{ employee.phone }}</td>
                                            <td>{{ employee.email }}</td>
                                            <td>

                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}

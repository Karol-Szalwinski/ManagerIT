{% extends 'base.html.twig' %}

{% block title %} Pracownicy {% endblock %}

{% block content %}
    <i class="fa fa-sellsy"></i>&nbsp;
    Lista pracowników
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-desktop"></i></div>
                                <h5>Lista pracowników</h5>
                                <div class="btn-group">
                                    <a href="{{ path('employee_new') }}" class="btn btn-primary btn-line btn-rect">Dodaj</a>
                                    <a href="#" class="btn btn-warning btn-line btn-rect">Modyfikuj</a>
                                    <a href="#" class="btn btn-danger btn-line btn-rect">Usuń</a>
                                </div>
                            </header>


                            <div id="collapse4" class="body">


                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Imię</th>
                                            <th>Nazwisko</th>
                                            <th>Stanowisko</th>
                                            <th>Dział</th>
                                            <th>Płeć</th>
                                            <th>Telefon</th>
                                            <th>Email</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for employee in employees %}
                                            <tr onclick='location.href="{{ path('employee_show', { 'id': employee.id }) }}"'>
                                                <td><a href="{{ path('employee_show', { 'id': employee.id }) }}">{{ employee.id }}</a></td>
                                                <td>{{ employee.name }}</td>
                                                <td>{{ employee.surname }}</td>
                                                <td>{{ employee.job }}</td>
                                                <td>{{ employee.departament.name }}</td>
                                                <td>{{ employee.sex }}</td>
                                                <td>{{ employee.phone }}</td>
                                                <td>{{ employee.email }}</td>
                                                <td><a href="{{ path('employee_edit', { 'id': employee.id }) }}">edit</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}

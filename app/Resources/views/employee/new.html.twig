{% extends 'base.html.twig' %}

{% block title %} Dodaj pracownika {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('employee_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Lista pracowników</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}
    <!-- /#left -->
    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!-- /.row -->
                <div class="row">
                    <!----------------------------------------------------->
                    <div class="col-lg-8">
                        <div class="box dark">
                            <header>
                                <div class="icons"><i class="fa fa-edit"></i></div>
                                <h5>Dodaj nowego pracownika</h5>
                                <!-- .toolbar -->
                                <div class="toolbar">
                                    <nav style="padding: 8px;">
                                        <a href="javascript:;" class="btn btn-default btn-xs collapse-box">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-default btn-xs full-box">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-danger btn-xs close-box">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </nav>
                                </div>            <!-- /.toolbar -->
                            </header>
                            <div id="div-1" class="body">

                                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

                                <div class="form-group" >
                                    {{ form_label(form.name, 'Imię', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź imię'} }) }}
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.surname, 'Nazwisko', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.surname, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź nazwisko'} }) }}
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.sex, 'Płeć', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6 my-radio uniform">
                                        {{ form_widget(form.sex, { 'attr': {'class': 'uniform'} }) }}

                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.phone, 'Telefon', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'data-mask': '999-999-999'} }) }}
                                            <span class="input-group-addon">999-999-999</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.email, 'Email', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Podaj email'} }) }}
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.job, 'Stanowisko', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.job, { 'attr': {'class': 'form-control', 'placeholder': 'Podaj stanowisko'} }) }}
                                    </div>
                                </div>    

                                <div class="form-group">
                                    {{ form_label(form.departament, 'Dział w firmie', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}

                                    <div class="col-lg-6">
                                        {{ form_widget(form.departament, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>
                                <input type="submit" value="Dodaj nowego pracownika" class="btn btn-primary btn-grad control-label" />
                                <br>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                    <!----------------------------------------------------->                    
                </div>
                <!-- /.row -->
            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}

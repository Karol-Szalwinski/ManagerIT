{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hdd</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hdd.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hdd.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ hdd.model }}</td>
            </tr>
            <tr>
                <th>Series</th>
                <td>{{ hdd.series }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ hdd.brand }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ hdd.capacity }}</td>
            </tr>
            <tr>
                <th>Formfactor</th>
                <td>{{ hdd.formFactor }}</td>
            </tr>
            <tr>
                <th>Interface</th>
                <td>{{ hdd.interface }}</td>
            </tr>
            <tr>
                <th>Rotationspeedrpm</th>
                <td>{{ hdd.rotationSpeedRpm }}</td>
            </tr>
            <tr>
                <th>Cache</th>
                <td>{{ hdd.cache }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hdd_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hdd_edit', { 'id': hdd.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %} Laptopy {% endblock %}



{% block mainbar %}

    <div class="main-bar">
        <div>
            <a href="{{ path('laptop_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista laptopów</span>
            </a>
            <a href="{{ path('laptop_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-laptop"></i></div>
                                <h5>Lista laptopów</h5>
                            </header>
                            <div id="collapse4" class="body">
                                
                                <br>
                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nazwa</th>
                                            <th>Model</th>
                                            <th>Typ</th>
                                            <th>Producent</th>
                                            <th>Ekran</th>
                                            <th>Procesor</th>
                                            <th>RAM</th>
                                            <th>System</th>
                                            <th>Użytkownicy</th>
                                            <th>Licencje</th>
                                            <th>Dział</th>
                                            <th>Mac adress</th>
                                            <th>Adres IP</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for laptop in laptops %}
                                            <tr onclick='location.href="{{ path('laptop_show', { 'id': laptop.id }) }}"'>
                                                <td>{{ laptop.name }}</td>
                                                <td>{{ laptop.model }}</td>
                                                <td>{{ laptop.type }}</td>
                                                <td>{{ laptop.manufacturer }}</td>
                                                <td>{{ laptop.screen }}</td>                                       
                                                <td>{{ laptop.cpu }}</td>
                                                <td>{{ laptop.ram }}</td>
                                                <td>{{ laptop.os }}</td>
                                                <td>
                                                    {% for employee in laptop.employees %}
                                                        {{ employee.name }} {{ employee.surname }}<br>
                                                    {% endfor %}
                                                </td>
                                                <td>
                                                    {% for license in laptop.licenses %}
                                                        {{ license.name }}<br>
                                                    {% endfor %}
                                                </td>
                                                <td>
                                                    {% for employee in laptop.employees %}
                                                        {{ employee.departament.name }}<br>
                                                    {% endfor %}
                                                </td>
                                                <td>{{ laptop.ipAddress }}</td>
                                                <td>{{ laptop.macAddress }}</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %} Laptopy {% endblock %}

{% block content %}
    <i class="fa fa-desktop"></i>&nbsp;
    Lista komputerów przenośnych
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-table"></i></div>
                                <h5>Lista laptopów</h5>
                            </header>
                            <div id="collapse4" class="body">
                                <a href="{{ path('laptop_new') }}" class="btn btn-primary btn-line btn-rect">Dodaj</a>
                                <a href="#" class="btn btn-warning btn-line btn-rect">Modyfikuj</a>
                                <a href="#" class="btn btn-danger btn-line btn-rect">Usuń</a>
                                <br>
                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nazwa</th>
                                            <th>Model</th>
                                            <th>Typ</th>
                                            <th>Producent</th>
                                            <th>Ekran</th>
                                            <th>Procesor</th>
                                            <th>RAM</th>
                                            <th>System</th>
                                            <th>Mac adress</th>
                                            <th>Adres IP</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for laptop in laptops %}
                                            <tr>
                                                <td>{{ laptop.name }}</td>
                                                <td>{{ laptop.model }}</td>
                                                <td>{{ laptop.type }}</td>
                                                <td>{{ laptop.manufacturer }}</td>
                                                <td>{{ laptop.screen }}</td>                                       
                                                <td>{{ laptop.cpu }}</td>
                                                <td>{{ laptop.ram }}</td>
                                                <td>{{ laptop.os }}</td>
                                                <td>{{ laptop.ipAddress }}</td>
                                                <td>{{ laptop.macAddress }}</td>
                                                <td><a href="{{ path('laptop_show', { 'id': laptop.id }) }}">{{ laptop.id }}</a></td>
                                                <td><a href="{{ path('laptop_edit', { 'id': laptop.id }) }}">edit</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->


            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
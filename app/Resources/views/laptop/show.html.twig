{% extends 'base.html.twig' %}

{% block body %}
    <h1>Laptop</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ laptop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ laptop.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ laptop.model }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ laptop.type }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ laptop.manufacturer }}</td>
            </tr>
            <tr>
                <th>Cpu</th>
                <td>{{ laptop.cpu }}</td>
            </tr>
            <tr>
                <th>Ram</th>
                <td>{{ laptop.ram }}</td>
            </tr>
            <tr>
                <th>Hdd</th>
                <td>{{ laptop.hdd }}</td>
            </tr>
            <tr>
                <th>Sdd</th>
                <td>{{ laptop.sdd }}</td>
            </tr>
            <tr>
                <th>Drive</th>
                <td>{{ laptop.drive }}</td>
            </tr>
            <tr>
                <th>Powersupply</th>
                <td>{{ laptop.powerSupply }}</td>
            </tr>
            <tr>
                <th>Battery</th>
                <td>{{ laptop.battery }}</td>
            </tr>
            <tr>
                <th>Screen</th>
                <td>{{ laptop.screen }}</td>
            </tr>
            <tr>
                <th>Os</th>
                <td>{{ laptop.os }}</td>
            </tr>
            <tr>
                <th>Ipaddress</th>
                <td>{{ laptop.ipAddress }}</td>
            </tr>
            <tr>
                <th>Macaddress</th>
                <td>{{ laptop.macAddress }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ laptop.picture }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ laptop.price }}</td>
            </tr>
            <tr>
                <th>Purchasedate</th>
                <td>{% if laptop.purchaseDate %}{{ laptop.purchaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{{ laptop.addDate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('laptop_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('laptop_edit', { 'id': laptop.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

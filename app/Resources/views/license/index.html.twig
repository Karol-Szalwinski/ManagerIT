{% extends 'base.html.twig' %}

{% block title %} Licencje {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('license_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista licencji</span>
            </a>
            <a href="{{ path('license_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-file-text"></i></div>
                                <h5>Lista licencji</h5>
                                <div class="btn-group">
                                    <a href="{{ path('license_new') }}" class="btn btn-primary btn-line btn-rect">Dodaj</a>
                                    <a href="#" class="btn btn-warning btn-line btn-rect">Modyfikuj</a>
                                    <a href="#" class="btn btn-danger btn-line btn-rect">Usuń</a>
                                </div>
                            </header>


                            <div id="collapse4" class="body">


                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nazwa</th>
                                            <th>Klucz</th>
                                            <th>Typ licencji</th>
                                            <th>Data wygaśnięcia</th>
                                            <th>Cena zakupu</th>
                                            <th>Data zakupu</th> 
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for license in licenses %}
                                            <tr onclick='location.href = "{{ path('license_show', { 'id': license.id }) }}"'>
                                                <td>{{ license.name }}</td>
                                                <td>{{ license.licenseKey }}</td>
                                                <td>{{ license.type }}</td>
                                                <td>{{ license.expireDate|date('Y-m-d') }}</td>
                                                <td>{{ license.price }}</td>
                                                <td>{{ license.purchaseDate|date('Y-m-d') }}</td>
                                                <td><a href="{{ path('license_show', { 'id': license.id }) }}">{{ license.id }}</a></td>
                                                <td><a href="{{ path('license_edit', { 'id': license.id }) }}">edit</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
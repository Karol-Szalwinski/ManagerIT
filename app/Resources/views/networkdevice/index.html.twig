{% extends 'base.html.twig' %}

{% block title %} Urządzenia sieciowe {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('networkdevice_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista urządzeń sieciowych</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('networkdevice_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
                {% endif %}
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-file-text"></i></div>
                                <h5>Lista urządzeń sieciowych</h5>
                            </header>

                            <div id="collapse456" class="body">

                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Typ urządzenia</th>
                                        <th>Nazwa</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Status</th>
                                        <th>Lokalizacja</th>
                                        <th>Ip</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for networkDevice in networkDevices %}
                                        <tr onclick='location.href = "{{ path('networkdevice_show', { 'id': networkDevice.id }) }}"'>
                                            <td>{{ networkDevice.type }}</td>
                                            <td>{{ networkDevice.name }}</td>
                                            <td>{{ networkDevice.brand }}</td>
                                            <td>{{ networkDevice.model }}</td>
                                            <td>{{ networkDevice.status }}</td>
                                            <td>{{ networkDevice.location }}</td>
                                            <td>{{ networkDevice.ip }}</td>
                                            {#<td>#}
                                                {#{% if tablet.pictures is empty %}#}
                                                    {#{% set picture = "default.png" %}#}
                                                    {#<a href="{{ asset('pictures/' ~ picture) }}">#}
                                                        {#<img src="{{ asset('pictures/' ~ picture) }}" alt="Desktop"#}
                                                             {#height="40" width="40">#}
                                                    {#</a>#}
                                                {#{% else %}#}
                                                    {#<a href="{{ asset('pictures/' ~ tablet.pictures|first.file) }}">#}
                                                        {#<img src="{{ asset('pictures/' ~ tablet.pictures|first.file) }}"#}
                                                             {#alt="Desktop"#}
                                                             {#height="40" width="40">#}
                                                    {#</a>#}
                                                {#{% endif %}#}
                                            {#</td>#}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->
            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
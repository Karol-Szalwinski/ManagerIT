
{% extends 'base.html.twig' %}

{% block title %} Nowe hasło {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('computer_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Główna</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}
    <!-- /#left -->
    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!-- /.row -->
                <div class="row">
                    <!----------------------------------------------------->

                    <div class="col-lg-8">
                        <div class="box dark">
                            <header>
                                <div class="icons"><i class="fa fa-edit"></i></div>
                                <h5>Dodaj nowe poświadczenie dostępowe</h5>
                                <!-- .toolbar -->
                                <div class="toolbar">
                                    <nav style="padding: 8px;">
                                        <a href="javascript:;" class="btn btn-default btn-xs collapse-box">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-default btn-xs full-box">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-danger btn-xs close-box">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </nav>
                                </div>            <!-- /.toolbar -->
                            </header>
                            <div id="div-1" class="body">

                                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

                                <div class="form-group" >
                                    {{ form_label(form.name, 'Nazwa poświadczenia lub dostępu', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Np. Dostęp przez stronę WWW dla Admina'} }) }}
                                    </div>
                                </div>
                                <div class="form-group" >
                                    {{ form_label(form.type, 'Rodzaj / sposób dostępu', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.type, { 'attr': {'class': 'form-control', 'placeholder': 'Np. HTTPS'} }) }}
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.address, 'Adres dostępu', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź adres dostępu np. https://web.pl'} }) }}
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.description, 'Opis', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź opis'} }) }}
                                    </div>
                                </div>
                                <div class="form-group" >
                                    {{ form_label(form.login, 'Login', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.login, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź login'} }) }}
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.password.first, 'Hasło', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.password.first, { 'attr': {'class': 'form-control', 'placeholder': 'hasło'} }) }}
                                    </div>
                                </div>

                                <div class="form-group" >
                                    {{ form_label(form.password.second, 'Powtórz hasło', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.password.second, { 'attr': {'class': 'form-control', 'placeholder': 'hasło'} }) }}
                                    </div>
                                </div>

                                <input type="submit" value="Dodaj nowe poświadczenie" class="btn btn-primary btn-grad control-label" />
                                <br>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>


                    <!----------------------------------------------------->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->

    <script>
        $(function() {
            Metis.formValidation();
        });
    </script>
{% endblock %}

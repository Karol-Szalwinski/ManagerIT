{% extends 'base.html.twig' %}

{% block body %}
    <h1>Password</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ password.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ password.name }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ password.object }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ password.type }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ password.address }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ password.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ password.password }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ password.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('password_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('password_edit', { 'id': password.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

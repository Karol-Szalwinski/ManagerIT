{% extends 'base.html.twig' %}

{% block body %}
    <h1>Phones list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Serial</th>
                <th>Cpu</th>
                <th>Ram</th>
                <th>Rom</th>
                <th>Modem</th>
                <th>Screensize</th>
                <th>Os</th>
                <th>Pin</th>
                <th>Pinscreen</th>
                <th>Color</th>
                <th>Description</th>
                <th>Sim</th>
                <th>Employee</th>
                <th>Adddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phone in phones %}
            <tr>
                <td><a href="{{ path('phone_show', { 'id': phone.id }) }}">{{ phone.id }}</a></td>
                <td>{{ phone.name }}</td>
                <td>{{ phone.brand }}</td>
                <td>{{ phone.model }}</td>
                <td>{{ phone.serial }}</td>
                <td>{{ phone.cpu }}</td>
                <td>{{ phone.ram }}</td>
                <td>{{ phone.rom }}</td>
                <td>{{ phone.modem }}</td>
                <td>{{ phone.screenSize }}</td>
                <td>{{ phone.os }}</td>
                <td>{{ phone.pin }}</td>
                <td>{{ phone.pinScreen }}</td>
                <td>{{ phone.color }}</td>
                <td>{{ phone.description }}</td>
                <td>{{ phone.sim }}</td>
                <td>{{ phone.employee }}</td>
                <td>{{ phone.addDate }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('phone_show', { 'id': phone.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('phone_edit', { 'id': phone.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('phone_new') }}">Create a new phone</a>
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %} Telefony {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('phone_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista telefonów</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('phone_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                    <i class="fa fa-plus"></i>
                    <span class="link-title">Dodaj</span>
                </a>
            {% endif %}
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-file-text"></i></div>
                                <h5>Lista telefonów</h5>
                            </header>

                            <div id="collapse4" class="body">

                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nazwa</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Przekątna ekranu</th>
                                        <th>Numer Telefonu</th>
                                        <th>Status</th>
                                        <th>Lokalizacja</th>
                                        <th>Użytkownik</th>
                                        <th>Zdjęcie</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for phone in phones %}
                                        <tr onclick='location.href = "{{ path('phone_show', { 'id': phone.id }) }}"'>
                                            <td>{{ phone.name }}</td>
                                            <td>{{ phone.brand }}</td>
                                            <td>{{ phone.model }}</td>
                                            <td>{{ phone.screenSize }}</td>
                                            <td>
                                                {% for sim in phone.sims %}
                                                    {{ sim.number }}<br>
                                                {% endfor %}
                                            </td>
                                            <td>{{ phone.status }}</td>
                                            <td>{{ phone.location }}</td>
                                            <td>
                                                {% for user in phone.users %}
                                                    {{ user.name }} {{ user.usersurname }}<br>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                {% set endLoop = false %}
                                                {% for picture in phone.pictures %}
                                                    {% if picture.type == "Pogladowe" and endLoop == false %}
                                                        {% set thumb40 = picture.file|replace({'.': "thumb40."}) %}
                                                        <a href="{{ asset('pictures/' ~ picture.file) }}">
                                                            <img src="{{ asset('pictures/thumb40/' ~ thumb40) }}"
                                                                 alt="Desktop"
                                                                 height="40" width="40">
                                                        </a>
                                                        {% set endLoop = true %}
                                                    {% endif %}
                                                {% endfor %}
                                                {% if endLoop == false %}
                                                    {% for picture in phone.pictures %}
                                                        {% if endLoop == false %}
                                                            {% set thumb40 = picture.file|replace({'.': "thumb40."}) %}
                                                            <a href="{{ asset('pictures/' ~ picture.file) }}">
                                                                <img src="{{ asset('pictures/thumb40/' ~ thumb40) }}"
                                                                     alt="Desktop"
                                                                     height="40" width="40">
                                                            </a>
                                                            {% set endLoop = true %}
                                                        {% endif %}
                                                    {% endfor %}

                                                    {% if endLoop == false %}
                                                        {% set picture = "default.png" %}
                                                        <a href="{{ asset('pictures/' ~ picture) }}">
                                                            <img src="{{ asset('pictures/' ~ picture) }}" alt="Desktop"
                                                                 height="40" width="40">
                                                        </a>
                                                    {% endif %}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->
            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
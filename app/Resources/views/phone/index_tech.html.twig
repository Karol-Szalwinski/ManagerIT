{% extends 'base.html.twig' %}

{% block title %} Telefony {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('phone_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista telefonów</span>
            </a>
            {% if is_granted('ROLE_EDITOR') %}
                <a href="{{ path('phone_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                    <i class="fa fa-plus"></i>
                    <span class="link-title">Dodaj</span>
                </a>
            {% endif %}
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="{{ icon }}"></i></div>
                                <h5>Lista telefonów ze szczegółami technicznymi</h5>
                            </header>

                            <div id="collapse4" class="body">

                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nazwa</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Przekątna ekranu</th>
                                        <th>S/N</th>
                                        <th>Imei</th>
                                        <th>OS</th>
                                        <th>Procesor</th>
                                        <th>RAM</th>
                                        <th>ROM</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for phone in phones %}
                                        <tr onclick='location.href = "{{ path('phone_show', { 'id': phone.id }) }}"'>
                                            <td>{{ phone.name }}</td>
                                            <td>{{ phone.brand }}</td>
                                            <td>{{ phone.model }}</td>
                                            <td>{{ phone.screenSize }}</td>
                                            <td>{{ phone.serial }}</td>
                                            <td>{{ phone.imei }}</td>
                                            <td>{{ phone.os }}</td>
                                            <td>{{ phone.cpu }}</td>
                                            <td>{{ phone.ram }}</td>
                                            <td>{{ phone.rom }}</td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->
            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
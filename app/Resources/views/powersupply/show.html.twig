{% extends 'base.html.twig' %}

{% block body %}
    <h1>Powersupply</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ powerSupply.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ powerSupply.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ powerSupply.model }}</td>
            </tr>
            <tr>
                <th>Series</th>
                <td>{{ powerSupply.series }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ powerSupply.brand }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ powerSupply.type }}</td>
            </tr>
            <tr>
                <th>Cooling</th>
                <td>{{ powerSupply.cooling }}</td>
            </tr>
            <tr>
                <th>Powerinwatt</th>
                <td>{{ powerSupply.powerInWatt }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('powersupply_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('powersupply_edit', { 'id': powerSupply.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

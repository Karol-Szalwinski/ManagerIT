                <th>Purchasedate</th>
                <th>Macaddress</th>
                <th>Ipaddress</th>
                <th>Picture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for printer in printers %}
                <tr>
                    <td><a href="{{ path('printer_show', { 'id': printer.id }) }}">{{ printer.id }}</a></td>

{% extends 'base.html.twig' %}

{% block title %} Drukarki {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('printer_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista drukarek</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('printer_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
            {% endif %}
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-file-text"></i></div>
                                <h5>Lista drukarek</h5>
                            </header>
                            <div id="collapse4" class="body">

                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nazwa</th>
                                        <th>Typ</th>
                                        <th>Rodzaj</th>
                                        <th>Model</th>
                                        <th>Producent</th>
                                        <th>S/N</th>
                                        <th>MAC adres</th>
                                        <th>Adres IP</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for printer in printers %}
                                        <tr onclick='location.href = "{{ path('printer_show', { 'id': printer.id }) }}"'>
                                            <td>{{ printer.name }}</td>
                                            <td>{{ printer.type }}</td>
                                            <td>{{ printer.factor }}</td>
                                            <td>{{ printer.model }}</td>
                                            <td>{{ printer.brand }}</td>
                                            <td>{{ printer.series }}</td>
                                            <td>{{ printer.macAddress }}</td>
                                            <td>{{ printer.ipAddress }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}
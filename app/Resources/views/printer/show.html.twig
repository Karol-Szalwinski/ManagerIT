{% extends 'base.html.twig' %}

{% block title %} Drukarki {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('printer_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Lista drukarek</span>
            </a>
            <a href="{{ path('printer_edit', { 'id': printer.id }) }}" class="btn btn-metis-5 btn-grad btn-rect btn-lg">
                <i class="fa fa-wrench"></i>
                <span class="link-title">Edytuj</span>
            </a>
            <div style="display: inline-block;">
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-metis-5 btn-grad btn-rect btn-lg inline"><i class="fa fa-trash"></i> Usuń</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}
{% block body %}
        <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!-- /.row -->

                <div class="row">

                    <!-- .col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-list"></i></div>
                                <h5>Dane identyfikacyjne</h5>

                                <div class="toolbar">
                                    <div class="btn-group">
                                        <a href="#condensedTable" data-toggle="collapse" class="btn btn-default btn-sm minimize-box">
                                            <i class="fa fa-angle-up"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </header>
                            <div id="condensedTable" class="body collapse in">
                                <table class="table table-condensed responsive-table">

                                    <tbody>
                                        <tr>                                                    
                                            <td>Nazwa</td>
                                            <td>{{ printer.id }}</td>
                                        </tr>
                                        <tr>
                                            <td>Model</td>
                                            <td>{{ printer.model }}</td>
                                        </tr>
                                        <tr>
                                            <td>Producent</td>
                                            <td>{{ printer.manufacturer }}</td>
                                        </tr>
                                        <tr>
                                            <td>Nr seryjny</td>
                                            <td>ERER0-FDSF-DFDFD4-DF3</td>
                                        </tr>
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 -->

                    <!-- .col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-list"></i></div>
                                <h5>Parametry</h5>

                                <div class="toolbar">
                                    <div class="btn-group">
                                        <a href="#condensedTable" data-toggle="collapse" class="btn btn-default btn-sm minimize-box">
                                            <i class="fa fa-angle-up"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </header>
                            <div id="condensedTable" class="body collapse in">
                                <table class="table table-condensed responsive-table">

                                    <tbody>
                                        <tr>                                                    
                                            <td><span class="fa fa-microchip"></span> Rodzaj</td>
                                            <td>{{ printer.type }}</td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Zasilacz</td>
                                            <td>{{ printer.powerSupply }}</td>
                                        </tr>
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 -->

                    <!-- .col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-list"></i></div>
                                <h5>Dane sieciowe</h5>

                                <div class="toolbar">
                                    <div class="btn-group">
                                        <a href="#condensedTable" data-toggle="collapse" class="btn btn-default btn-sm minimize-box">
                                            <i class="fa fa-angle-up"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </header>
                            <div id="condensedTable" class="body collapse in">
                                <table class="table table-condensed responsive-table">

                                    <tbody>
                                        <tr>                                                    
                                            <td>Adres IP</td>
                                            <td>{{ printer.ipAddress }}</td>
                                        </tr>
                                        <tr>
                                            <td>MAC Adres</td>
                                            <td>{{ printer.macAddress }}</td>
                                        </tr>
                                        <tr>
                                            <td>Nazwa sieciowa</td>
                                            <td>{{ printer.name }}</td>
                                        </tr>
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 -->

                    <!-- .col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-list"></i></div>
                                <h5>Dane finansowe</h5>

                                <div class="toolbar">
                                    <div class="btn-group">
                                        <a href="#condensedTable" data-toggle="collapse" class="btn btn-default btn-sm minimize-box">
                                            <i class="fa fa-angle-up"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </header>
                            <div id="condensedTable" class="body collapse in">
                                <table class="table table-condensed responsive-table">

                                    <tbody>
                                        <tr>                                                    
                                            <td>Data zakupu</td>
                                            <td>{% if printer.purchaseDate %}{{ printer.purchaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        </tr>
                                        <tr>
                                            <td>Data wprowadzenia</td>
                                            <td>{{ printer.addDate|date('Y-m-d H:i:s') }}</td>
                                        </tr>
                                        <tr>
                                            <td>Cena zakupu</td>
                                            <td>{{ printer.price }}</td>
                                        </tr>
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 -->

 {#                   <!-- .col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-list"></i></div>
                                <h5>Pracownicy</h5>

                                <div class="toolbar">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-info" data-toggle="collapse" data-target="#chose-employee">Zmień <i class="fa fa-wrench"></i></button>
                                        <a href="#condensedTable" data-toggle="collapse" class="btn btn-default btn-sm minimize-box">
                                            <i class="fa fa-angle-up"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm close-box"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </header>
                            <header id="chose-employee" class="collapse">
                                {{ form_start(employee_form, { 'attr': {'class': 'form-wertical'}, 'action': path('laptop_connect_employee', { 'id': printer.id }) }) }} 
                                <div class="form-group">
                                    {{ form_label(employee_form.employees, 'Wybierz pracownika', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}

                                    <div class="col-lg-6">
                                        {{ form_widget(employee_form.employees, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>
                                <input type="submit" value="Zapisz" class="btn btn-primary btn-grad control-label" />
                                <br>
                                {{ form_end(employee_form) }}
                            </header>
                            <div id="condensedTable" class="body collapse in">
                                <table class="table table-condensed responsive-table">
                                    <thead>
                                        <tr>
                                            <th>Imię</th>
                                            <th>Nazwisko</th>
                                            <th>Stanowisko</th>
                                            <th>Dział</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for employee in laptop.employees %}
                                            <tr>                                                    
                                                <td>{{ employee.name }}</td>
                                                <td>{{ employee.surname }}</td>
                                                <td>{{ employee.job }}</td>
                                                <td>{{ employee.departament.name }}</td>
                                                <td>
                                                    <a href="{{ path('laptop_detach_employee', { 'id': printer.id, 'employee': employee.id }) }}" class="btn btn-danger btn-grad btn-rect btn-sm">
                                                        <i class="fa fa-unlink"></i>
                                                        <span class="link-title">odłącz</span>
                                                    </a>
                                                </td>
                                            </tr>       
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 -->
#}
                </div>
                <!-- /.row -->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}

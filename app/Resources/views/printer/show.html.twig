{% extends 'base.html.twig' %}

{% block body %}
    <h1>Printer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ printer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ printer.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ printer.model }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ printer.type }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ printer.manufacturer }}</td>
            </tr>
            <tr>
                <th>Powersupply</th>
                <td>{{ printer.powerSupply }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ printer.price }}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{% if printer.addDate %}{{ printer.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Purchasedate</th>
                <td>{% if printer.purchaseDate %}{{ printer.purchaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Macaddress</th>
                <td>{{ printer.macAddress }}</td>
            </tr>
            <tr>
                <th>Ipaddress</th>
                <td>{{ printer.ipAddress }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ printer.picture }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('printer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('printer_edit', { 'id': printer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

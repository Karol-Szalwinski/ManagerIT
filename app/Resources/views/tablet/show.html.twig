{% block body %}
    <h1>Tablet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tablet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tablet.name }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ tablet.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ tablet.model }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ tablet.serial }}</td>
            </tr>
            <tr>
                <th>Cpu</th>
                <td>{{ tablet.cpu }}</td>
            </tr>
            <tr>
                <th>Ram</th>
                <td>{{ tablet.ram }}</td>
            </tr>
            <tr>
                <th>Rom</th>
                <td>{{ tablet.rom }}</td>
            </tr>
            <tr>
                <th>Modem</th>
                <td>{{ tablet.modem }}</td>
            </tr>
            <tr>
                <th>Screensize</th>
                <td>{{ tablet.screenSize }}</td>
            </tr>
            <tr>
                <th>Os</th>

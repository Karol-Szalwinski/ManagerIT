            <tr>
                <th>Adddate</th>
                <td>{{ tablet.addDate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tablet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tablet_edit', { 'id': tablet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

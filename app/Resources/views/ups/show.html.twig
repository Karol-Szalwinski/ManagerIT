{% extends 'base.html.twig' %}

{% block title %} Zasilacz UPS {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('ups_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Lista zasilaczy UPS</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('ups_edit', { 'id': up.id }) }}"
                   class="btn btn-metis-5 btn-grad btn-rect btn-md">
                    <i class="fa fa-wrench"></i>
                    <span class="link-title">Edytuj</span>
                </a>
                <a href="{{ path('ups_photo', {'id': up.id }) }}"
                   class="btn btn-metis-5 btn-grad btn-rect btn-md">
                    <i class="fa fa-file-photo-o"></i>
                    <span class="link-title">Zdjęcie</span>
                </a>
                {#<a href="{{ path('tablet_employees', {'id': tablet.id }) }}"#}
                   {#class="btn btn-metis-5 btn-grad btn-rect btn-md">#}
                    {#<i class="fa fa-user"></i>#}
                    {#<span class="link-title">Pracownicy</span>#}
                {#</a>#}
                <a href="{{ path('ups_finances', {'id': up.id }) }}"
                   class="btn btn-metis-5 btn-grad btn-rect btn-md">
                    <i class="fa fa-money"></i>
                    <span class="link-title">Finanse</span>
                </a>
                <div style="display: inline-block;">
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-metis-5 btn-grad btn-rect btn-md inline"><i
                                class="fa fa-trash"></i> Usuń
                    </button>
                    {{ form_end(delete_form) }}
                </div>
            {% endif %}
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}


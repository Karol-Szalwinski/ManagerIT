{% extends 'base.html.twig' %}

{% block body %}
    <h1>Up</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ up.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ up.name }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ up.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ up.model }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ up.serial }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ up.capacity }}</td>
            </tr>
            <tr>
                <th>Estimatedworkingtime</th>
                <td>{{ up.estimatedWorkingTime }}</td>
            </tr>
            <tr>
                <th>Updatebatterydate</th>
                <td>{% if up.updateBatteryDate %}{{ up.updateBatteryDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{% if up.addDate %}{{ up.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ups_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ups_edit', { 'id': up.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

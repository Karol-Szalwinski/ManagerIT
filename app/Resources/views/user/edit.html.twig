{% extends 'base.html.twig' %}

{% block title %} Edycja użytkownika {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('user_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-fast-backward"></i>
                <span class="link-title">Lista użytkowników</span>
            </a>
            <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-left"></i>
                <span class="link-title">Pokaż użytkownika</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}
        <!-- /#left -->
        <div id="content">
            <div class="outer">
                <div class="inner bg-light lter">
                    <!-- /.row -->
                    <div class="row">
                        <!----------------------------------------------------->
                        <div class="col-lg-8">
                            <div class="box dark">
                                <header>
                                    <div class="icons"><i class="fa fa-edit"></i></div>
                                    <h5>Edytuj dane użytkownika</h5>
                                    <!-- .toolbar -->
                                    <div class="toolbar">
                                        <nav style="padding: 8px;">
                                            <a href="javascript:;" class="btn btn-default btn-xs collapse-box">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                            <a href="javascript:;" class="btn btn-default btn-xs full-box">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                            <a href="javascript:;" class="btn btn-danger btn-xs close-box">
                                                <i class="fa fa-times"></i>
                                            </a>
                                        </nav>
                                    </div>            <!-- /.toolbar -->
                                </header>
                                <div id="div-1" class="body">

                                    {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal'} }) }}


                                    <div class="form-group" >
                                        {{ form_label(edit_form.name, 'Imię', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                        <div class="col-lg-6">
                                            {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź imię'} }) }}
                                        </div>
                                    </div>

                                    <div class="form-group" >
                                        {{ form_label(edit_form.usersurname, 'Nazwisko', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                        <div class="col-lg-6">
                                            {{ form_widget(edit_form.usersurname, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź nazwisko'} }) }}
                                        </div>
                                    </div>

                                    <div class="form-group" >
                                        {{ form_label(edit_form.email, 'Email', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                        <div class="col-lg-6">
                                            {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Wprowadź email'} }) }}
                                        </div>
                                    </div>


                                    <div class="form-group" >
                                        {{ form_label(edit_form.job, 'Stanowisko', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                        <div class="col-lg-6">
                                            {{ form_widget(edit_form.job, { 'attr': {'class': 'form-control', 'placeholder': 'Podaj stanowisko'} }) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(edit_form.departament, 'Dział w firmie', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}

                                        <div class="col-lg-6">
                                            {{ form_widget(edit_form.departament, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>

                                    <div class="form-group" >
                                        {{ form_label(edit_form.roles, 'Uprawnienia', { 'label_attr': {'class': 'control-label col-lg-4'} }) }}
                                        <div class="col-lg-6 my-radio uniform">
                                            {{ form_widget(edit_form.roles, { 'attr': {'class': 'uniform'} }) }}

                                        </div>
                                    </div>

                                    <input type="submit" value="Zapisz zmiany" class="btn btn-primary btn-grad control-label" />
                                    <br>
                                    {{ form_end(edit_form) }}
                                </div>
                            </div>
                        </div>
                        <!----------------------------------------------------->                    
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.inner -->
            </div>
            <!-- /.outer -->
        </div>
        <!-- /#content -->
    {% endblock %}
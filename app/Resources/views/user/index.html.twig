{% extends 'base.html.twig' %}

{% block title %} Użytkownicy {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('user_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista użytkowników</span>
            </a>
            <a href="{{ path('user_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-plus"></i>
                <span class="link-title">Dodaj</span>
            </a>
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-users"></i></div>
                                <h5>Lista szczęśliwych użytkowników tego wspaniałego systemu</h5>

                            </header>


                            <div id="collapse4" class="body">


                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Login</th>
                                        <th>Imię</th>
                                        <th>Nazwisko</th>
                                        <th>Email</th>
                                        <th>Zablokowany</th>
                                        <th>Ostatnie logowanie</th>
                                        <th>Rola</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr onclick='location.href="{{ path('user_show', { 'id': user.id }) }}"'>
                                            <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a>
                                            </td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.name }}</td>
                                            <td>{{ user.usersurname }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>
                                                {% if user.enabled == true %}
                                                    nie
                                                {% else %}
                                                    tak
                                                {% endif %}
                                            </td>
                                            <td>{{ user.lastLogin|date('Y-m-d H:i:s') }}</td>
                                            <td>
                                                {% for roles in user.roles %}
                                                    {% if roles == "ROLE_ADMIN" %}
                                                        admin&nbsp
                                                    {% elseif roles == "ROLE_USER" %}
                                                        user&nbsp
                                                    {% elseif roles == "ROLE_SUPER_ADMIN" %}
                                                        superadmin&nbsp
                                                    {% else %}
                                                        {{ roles }}&nbsp
                                                    {% endif %}
                                                {% endfor %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}



{% extends 'base.html.twig' %}

{% block title %} Użytkownicy {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <h3>
            <a href="{{ path('user_index') }}">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista użytkowników</span>
                <i class="fa fa-user-o"></i>
            </a>
        </h3>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-user-o"></i></div>
                                <h5>Lista użytkowników</h5>
                                <div class="btn-group">
                                    <a href="{{ path('user_new') }}" class="btn btn-primary btn-line btn-rect">Dodaj</a>
                                    <a href="#" class="btn btn-warning btn-line btn-rect">Modyfikuj</a>
                                    <a href="#" class="btn btn-danger btn-line btn-rect">Usuń</a>
                                </div>
                            </header>


                            <div id="collapse4" class="body">


                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nazwa użytkownika</th>
                                            <th>Email</th>
                                            <th>Dostępny</th>
                                            <th>Zalogowany ostatnio</th>
                                            <th>Rola</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for user in users %}
                                            <tr onclick='location.href="{{ path('user_show', { 'id': user.id }) }}"'>
                                                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                                                <td>{{ user.username }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>{{ user.enabled }}</td>
                                                <td>{{ user.lastLogin |date("F jS \\a\\t g:ia") }}</td>
                                                <td>
                                                    {% for roles in user.roles %}
                                                        {{ roles }},
                                                    {% endfor %}
                                                </td>
                                                <td><a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}



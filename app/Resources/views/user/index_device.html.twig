{% extends 'base.html.twig' %}

{% block title %} Użytkownicy {% endblock %}

{% block mainbar %}
    <div class="main-bar">
        <div>
            <a href="{{ path('user_index') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                <i class="fa fa-arrow-down"></i>
                <span class="link-title">Lista użytkowników</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_new') }}" class="btn btn-metis-5 btn-grad btn-rect btn-md">
                    <i class="fa fa-plus"></i>
                    <span class="link-title">Dodaj</span>
                </a>
            {% endif %}
        </div>
    </div>
    <!-- /.main-bar -->
{% endblock %}

{% block body %}

    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
                <!--Begin Datatables-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="fa fa-users"></i></div>
                                <h5>Lista użytkowników z uwzględnieniem przypisanego im sprzętu</h5>

                            </header>


                            <div id="collapse4" class="body">


                                <table id="dataTable"
                                       class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Login</th>
                                        <th>Imię</th>
                                        <th>Nazwisko</th>
                                        <th>Dział</th>
                                        <th>Komputer / Laptop</th>
                                        <th>Telefon</th>
                                        <th>Tablet</th>
                                        <th>Drukarka</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr onclick='location.href="{{ path('user_show', { 'id': user.id }) }}"'>
                                            <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a>
                                            </td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.name }}</td>
                                            <td>{{ user.usersurname }}</td>
                                            <td>{{ user.departament.name }}</td>
                                            <td class="text-center">{{ user.computers|length }}</td>
                                            <td class="text-center">{{ user.phones|length }}</td>
                                            <td class="text-center">{{ user.tablets|length }}</td>
                                            <td class="text-center">{{ user.printers|length }}</td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!--End Datatables-->

            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
{% endblock %}


